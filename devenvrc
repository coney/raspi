# YOU NEED TO SET RASPI REPO PATH
export RASPI_BASE=~/raspi

# set 3rd party tool and source path
export RASPI_TOOL_PATH=$RASPI_BASE/tools
export RASPI_LINUX_PATH=$RASPI_BASE/linux
export RASPI_FIRMWARE_PATH=$RASPI_BASE/firmwire

# update cross compiler path
export RASPI_CROSS_BIN=$RASPI_TOOL_PATH/arm-bcm2708/gcc-linaro-arm-linux-gnueabihf-raspbian/bin
export PATH=$RASPI_CROSS_BIN:$PATH
